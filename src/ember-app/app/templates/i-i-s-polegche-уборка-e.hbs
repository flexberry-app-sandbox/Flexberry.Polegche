<h3 class="ui header">{{t "forms.i-i-s-polegche-уборка-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-polegche-уборка-e.деньУборки-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.деньУборки
      class=(if (v-get validationModel "деньУборки" "isInvalid") "error")
      data-test-i-i-s-polegche-уборка-e-деньУборки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "деньУборки" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.времяУборки
      class=(if (v-get validationModel "времяУборки" "isInvalid") "error")
      label=(t "forms.i-i-s-polegche-уборка-e.времяУборки-caption")
      data-test-i-i-s-polegche-уборка-e-времяУборки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяУборки" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-polegche-уборка-e.должность-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.должность
      displayAttributeName="наименование"
      autocomplete=true
      relationName="должность"
      projection="ДолжностьL"
      title=(t "forms.i-i-s-polegche-уборка-e.должность-caption")
      readonly=readonly
      componentName="должностьLookup"
      class=(if (v-get validationModel "должность" "isInvalid") "error")
      data-test-i-i-s-polegche-уборка-e-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "должность" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-polegche-уборка-e.вольер-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.вольер
      displayAttributeName="площадь"
      autocomplete=true
      relationName="вольер"
      projection="ВольерL"
      title=(t "forms.i-i-s-polegche-уборка-e.вольер-caption")
      readonly=readonly
      componentName="вольерLookup"
      class=(if (v-get validationModel "вольер" "isInvalid") "error")
      data-test-i-i-s-polegche-уборка-e-вольер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "вольер" "message")}}
  </div>
</form>
